@using Resources
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/redmond/jquery-ui.css" />
    <link rel="stylesheet" type="text/css" href="http://www.ok-soft-gmbh.com/jqGrid/jquery.jqGrid-4.5.4/css/ui.jqgrid.css" />
    <link href="~/Content/multiple-select.css" rel="stylesheet" />

    @*<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
        <link href="~/Content/jquery.jqGrid/ui.jqgrid.css" rel="stylesheet" />*@
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/i18n/grid.locale-en.js"></script>
    <script src="~/Scripts/jquery.jqGrid.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.multiple.select.js"></script>
</head>
<body>
    <div class="container">
        <header class="header">
            <div class="container">
                <div class="header">
                    <!-- Header start -->
                    <div class="header-logo" style="padding: 0;">
                        <img src="~/Images/HexaRule.png" alt="logo" style="height: 70px;" />
                        @Html.ActionLink("Home", "Index", "Home")
                    </div>
                    <div class="header-user">
                        <div class="header-user-details">
                            <a id="lnkUserName">@(ViewBag.UserName)</a>
                        </div>
                        <div class="header-logout">
                            @Html.ActionLink("Logout", "Logout", "Home")

                        </div>
                    </div>
                    <!-- Header end -->
                </div>
            </div>
        </header>
        <div class="content">
            <!-- Body start -->
            <div class="content_mid contact">
                <div class="ui-tabs">
                    <ul id="Menu" class="ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-corner-all" style="font-weight: normal;">
                        <li id="liConfig" class="@((ViewBag.SelectedMenu == "1") ? "ui-state-default ui-corner-top ui-tabs-selected shadow" : "ui-state-default ui-corner-top shadow")"
                            style="width: 10%;">
                            @Html.ActionLink("Configuration", "Index", "Hexarule")
                        </li>
                        <li class="ui-state-default ui-corner-top shadow" style="width: 14%;">
                            <a href="#">RuleSetup</a>
                            <ul style="padding: 0px;" class="shadow">
                                <li class="@((ViewBag.SelectedMenu == "2") ? "ui-state-default ui-corner-top ui-tabs-selected shadow" : "ui-state-default ui-corner-top shadow")"
                                    style="width: 14%; margin: 1px !important; text-align: left; cursor: pointer; width: 99%;">
                                    @Html.ActionLink("Rule", "Rule", "Hexarule", null, new { @style = "width: 100% !important;" })
                                </li>
                                <li class="@((ViewBag.SelectedMenu == "3") ? "ui-state-default ui-corner-top ui-tabs-selected shadow" : "ui-state-default ui-corner-top shadow")"
                                    style="width: 14%; margin: 1px !important; text-align: left; cursor: pointer; width: 99%;">
                                    @Html.ActionLink(DM_en_US.lblRuleType, "RuleType", "Hexarule", null, new { @style = "width: 100% !important;" })
                                </li>
                                <li class="@((ViewBag.SelectedMenu == "4") ? "ui-state-default ui-corner-top ui-tabs-selected shadow" : "ui-state-default ui-corner-top shadow")"
                                    style="width: 14%; margin: 1px !important; text-align: left; cursor: pointer; width: 99%;">
                                    @Html.ActionLink(DM_en_US.lblRuleCategory, "RuleCategory", "Hexarule", null, new { @style = "width: 100% !important;" })
                                </li>
                                <li class="@((ViewBag.SelectedMenu == "5") ? "ui-state-default ui-corner-top ui-tabs-selected shadow" : "ui-state-default ui-corner-top shadow")"
                                    style="width: 14%; margin: 1px !important; text-align: left; cursor: pointer; width: 99%;">
                                    @Html.ActionLink("Key columns", "HXRKeyColumns", "Hexarule", null, new { @style = "width: 100% !important;" })
                                </li>
                                <li class="@((ViewBag.SelectedMenu == "6") ? "ui-state-default ui-corner-top ui-tabs-selected shadow" : "ui-state-default ui-corner-top shadow")"
                                    style="width: 14%; margin: 1px !important; text-align: left; cursor: pointer; width: 99%; ">
                                    @Html.ActionLink("Error", "RuleError", "Hexarule", null, new { @style = "width: 100% !important;" })
                                </li>
                            </ul>
                        </li>
                        <li id="liPreRuleSelection" class="@((ViewBag.SelectedMenu == "7") ? "ui-state-default ui-corner-top ui-tabs-selected shadow" : "ui-state-default ui-corner-top shadow")"
                            style="width: 11%;">
                            @Html.ActionLink("Pre-Defined Rule", "HXRPreDefine", "Hexarule")
                        </li>
                        <li id="liUserDefineRule" class="@((ViewBag.SelectedMenu == "8") ? "ui-state-default ui-corner-top ui-tabs-selected shadow" : "ui-state-default ui-corner-top shadow")"
                            style="width: 11%;">
                            @Html.ActionLink("Create Rule", "HXRUserDefine", "Hexarule")
                        </li>
                        <li id="liRuleAllocation" class="@((ViewBag.SelectedMenu == "9") ? "ui-state-default ui-corner-top ui-tabs-selected shadow" : "ui-state-default ui-corner-top shadow")"
                            style="width: 11%;">
                            @Html.ActionLink("Rule Allocation", "HXRRuleAllocation", "Hexarule")
                        </li>
                        <li id="liShowRules" class="@((ViewBag.SelectedMenu == "10") ? "ui-state-default ui-corner-top ui-tabs-selected shadow" : "ui-state-default ui-corner-top shadow")"
                            style="width: 12%;">
                            @Html.ActionLink("Process and Updates", "HXRShowRules", "Hexarule")
                        </li>
                        <li id="liReport" class="@((ViewBag.SelectedMenu == "11") ? "ui-state-default ui-corner-top ui-tabs-selected shadow" : "ui-state-default ui-corner-top shadow")"
                            style="width: 14%;">
                            @Html.ActionLink("Report", "HexaRule", "DashBoard")
                        </li>
                        <li id="liDashboard" class="@((ViewBag.SelectedMenu == "12") ? "ui-state-default ui-corner-top ui-tabs-selected shadow" : "ui-state-default ui-corner-top shadow")"
                            style="width: 14%;">
                            <a href="http://172.25.69.49:8090/views/BIADataQualityDashboard/DataQualityDashboard??:embed=yes&:toolbar=top">Dashboard</a>
                        </li>
                    </ul>
                </div>
            </div>
            @RenderBody()
            <div class="form-load-img">
                <asp:Image ID="Loadinglbl" ClientIDMode="Static" runat="server" ImageUrl="~/DMO_Style/images/load5.gif" Style="visibility: hidden;" />
            </div>
            <!-- Body end -->
        </div>
        <footer class="footer">
            <div>
                <!-- Footer start -->
                <div class="ft-img">
                    © copyright, 2016. Hexaware Technologies. All Rights Reserved.
                </div>
                <!-- Footer end -->
            </div>
        </footer>
    </div>
    @*@Scripts.Render("~/bundles/jquery")*@
    @RenderSection("Scripts", false)

</body>
</html>
